# üåä Lakepipe Financial Data Processing Environment Configuration

# üìä Data Sources
LAKEPIPE_SOURCE_URI=s3://market-data-raw/minute-bars/**/*.parquet
LAKEPIPE_SOURCE_FORMAT=parquet
LAKEPIPE_SOURCE_COMPRESSION=zstd

# üéØ Data Sink
LAKEPIPE_SINK_URI=s3://market-data-processed/
LAKEPIPE_SINK_FORMAT=parquet
LAKEPIPE_SINK_COMPRESSION=zstd

# üîß Cache Configuration
LAKEPIPE_CACHE_ENABLED=true
LAKEPIPE_CACHE_DIR=/opt/lakepipe/cache
LAKEPIPE_CACHE_MAX_SIZE=50GB
LAKEPIPE_CACHE_TTL_DAYS=7

# üì° Kafka Configuration (for streaming)
LAKEPIPE_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
LAKEPIPE_KAFKA_GROUP_ID=lakepipe-market-data
LAKEPIPE_KAFKA_AUTO_OFFSET_RESET=latest
LAKEPIPE_KAFKA_SCHEMA_REGISTRY_URL=http://localhost:8081

# üóÇÔ∏è Logging Configuration
LAKEPIPE_LOG_LEVEL=INFO
LAKEPIPE_LOG_FORMAT=%(asctime)s | %(name)s | %(levelname)s | %(message)s
LAKEPIPE_LOG_FILE=/var/log/lakepipe/market-data.log

# ‚òÅÔ∏è AWS Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1

# üìà Market Data Configuration
MARKET_DATA_SYMBOLS=AAPL,GOOGL,MSFT,AMZN,TSLA
MARKET_DATA_START_DATE=2024-01-01
MARKET_DATA_END_DATE=2024-12-31

# üè¶ Financial Calculations
VWAP_WINDOW_MINUTES=20
RSI_PERIOD=14
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9
BOLLINGER_PERIOD=20
BOLLINGER_STD_DEV=2

# üö® Risk Management
MAX_POSITION_SIZE=1000000
MAX_DAILY_LOSS=50000
RISK_CHECK_INTERVAL_SECONDS=10

# üîß Performance Tuning
LAKEPIPE_MAX_MEMORY_GB=32
LAKEPIPE_MAX_CPU_CORES=16
LAKEPIPE_BATCH_SIZE=1000000
LAKEPIPE_PARALLEL_EXECUTION=true

# üìä Monitoring
LAKEPIPE_MONITORING_ENABLED=true
LAKEPIPE_METRICS_INTERVAL_SECONDS=30
LAKEPIPE_ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
